<table class="table table-light table-striped">
  <tbody>
    <% XET::App::Targets.dup.each do |name, target| %>
    <tr>
      <th scope="row">
        <%= name %>
      </th>
      <td><%= target.config.try(&.host_ip).try(&.address) %></td>
      <td>
      <form>
        <button formmethod="get" formaction="/api/targets/delete/<%= HTML.escape name %>" type="submit" class="btn btn-danger"><i class="fa-thin fa-trash-can"></i></button>
      </form>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>